@using EVCMS.Repositories.DucPV.Models
@model IEnumerable<EVCMS.Repositories.DucPV.Models.TransactionsDucPv>

@{
    ViewData["Title"] = "Transactions";
    int currentPage = ViewData["CurrentPage"] as int? ?? 1;
    int totalPages = ViewData["TotalPages"] as int? ?? 1;
    string searchDescription = ViewData["SearchDescription"] as string ?? "";
    string searchAmount = ViewData["SearchAmount"] as string ?? "";
    string searchStatus = ViewData["SearchStatus"] as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    <a class="btn btn-danger" asp-action="Logout" asp-controller="Authen">Logout</a>
</div>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</div>

<form method="get" asp-action="Index" class="row g-3 mb-4 align-items-end">
    <div class="col-md-4">
        <label class="form-label">Description</label>
        <input type="text" name="searchDescription" class="form-control" placeholder="Description" value="@searchDescription" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Amount</label>
        <input type="number" name="searchAmount" class="form-control" placeholder="Amount" value="@searchAmount" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Status</label>
        <select name="searchStatus" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(searchStatus) ? "selected" : null)">All</option>
            <option value="true" selected="@(searchStatus == "true" ? "selected" : null)">True</option>
            <option value="false" selected="@(searchStatus == "false" ? "selected" : null)">False</option>
        </select>

    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success w-100">Search</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th>Status</th>
            <th>Method</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (TransactionsDucPv item in Model)
        {
            <tr>
                <td>@item.Amount</td>
                <td>@item.Description</td>
                <td>@item.TransactionDate</td>
                <td>@item.Status</td>
                <td>@item.MethodDucPv?.MethodType </td>
                <td>@item.UserAccount?.Email </td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.TransactionTransactionsDucPvid">Edit</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.TransactionTransactionsDucPvid">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.TransactionTransactionsDucPvid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center">
    <div>Page @currentPage of @totalPages</div>
    <div>
        @if (currentPage > 1)
        {
            <a class="btn btn-outline-secondary me-2" asp-action="Index" asp-route-page="@(currentPage - 1)"
               asp-route-searchDescription="@searchDescription"
               asp-route-searchAmount="@searchAmount"
               asp-route-searchStatus="@searchStatus">Previous</a>
        }
        @if (currentPage < totalPages)
        {
            <a class="btn btn-outline-secondary" asp-action="Index" asp-route-page="@(currentPage + 1)"
               asp-route-searchDescription="@searchDescription"
               asp-route-searchAmount="@searchAmount"
               asp-route-searchStatus="@searchStatus">Next</a>
        }
    </div>
</div>
