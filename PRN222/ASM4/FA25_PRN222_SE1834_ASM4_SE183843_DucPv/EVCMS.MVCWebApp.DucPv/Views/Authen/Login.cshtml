@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 350px;">
        <h3 class="card-title text-center mb-4">Login</h3>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" name="userName" class="form-control" required />
                @if (ViewData.ModelState.ContainsKey("userName"))
                {
                    <span class="text-danger">
                        @ViewData.ModelState["userName"].Errors.FirstOrDefault()?.ErrorMessage
                    </span>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control" required />
                @if (ViewData.ModelState.ContainsKey("password"))
                {
                    <span class="text-danger">
                        @ViewData.ModelState["password"].Errors.FirstOrDefault()?.ErrorMessage
                    </span>
                }
            </div>

            <div class="mb-3 text-center">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="text-danger small mb-0">@error.ErrorMessage</p>
                }
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>
