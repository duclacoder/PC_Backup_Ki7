@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/EVCMShub")
            .build();

        connection.start();

        // Hàm gọi hub method
        async function deleteBySignalR(transactionId) {
            try {
                await connection.invoke("Receiver_DeleteTransactionDucPV", transactionId);
                alert("Đã xóa thành công qua SignalR!");
                window.location.href = "/TransactionsDucPvs/Index";
            } catch (err) {
                console.error("Lỗi khi gọi SignalR Hub:", err);
                alert("Xóa thất bại!");
            }
        }
    </script>
