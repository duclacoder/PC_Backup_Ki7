@page
@model EVCMS.RazorWebApp.DucPV.Pages.TransactionsDucPvs.CreateModel

@{
    ViewData["Title"] = "Create Transaction";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create Transaction</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>                
                <div class="mb-3">
                    <label asp-for="TransactionsDucPv.UserAccountId" class="form-label"></label>
                    <select asp-for="TransactionsDucPv.UserAccountId" class="form-select" asp-items="ViewBag.UserAccountId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="TransactionsDucPv.Amount" class="form-label"></label>
                    <input asp-for="TransactionsDucPv.Amount" class="form-control" />
                    <span asp-validation-for="TransactionsDucPv.Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TransactionsDucPv.MethodDucPvid" class="form-label"></label>
                    <select asp-for="TransactionsDucPv.MethodDucPvid" class="form-select" asp-items="ViewBag.MethodDucPvid"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="TransactionsDucPv.Description" class="form-label"></label>
                    <input asp-for="TransactionsDucPv.Description" class="form-control" />
                    <span asp-validation-for="TransactionsDucPv.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TransactionsDucPv.TransactionDate" class="form-label"></label>
                    <input asp-for="TransactionsDucPv.TransactionDate" class="form-control" type="date" />
                    <span asp-validation-for="TransactionsDucPv.TransactionDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TransactionsDucPv.Status" class="form-label"></label>
                    <select asp-for="TransactionsDucPv.Status" class="form-select">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span asp-validation-for="TransactionsDucPv.Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TransactionsDucPv.CreatedAt" class="form-label"></label>
                    <input asp-for="TransactionsDucPv.CreatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="TransactionsDucPv.CreatedAt" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TransactionsDucPv.UpdatedAt" class="form-label"></label>
                    <input asp-for="TransactionsDucPv.UpdatedAt" class="form-control" type="datetime-local" />
                    <span asp-validation-for="TransactionsDucPv.UpdatedAt" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
